{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES2015",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "build/js"
        ,"moduleResolution": "node"
        ,"declaration": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}